{{#extends "base"}}
  {{#block "content"}}
    <h1> Deleting {{poster.title}}</h1>
    <form method="POST">
      <div class="alert alert-danger">
        <p>Confirm to delete {{poster.title}}?</p>
        <input type="submit" class="btn btn-danger btn-md" value="Yes" />
        <a href="/posters" class="btn btn-success">No</a>
      </div>
    </form>
  {{/block}}
{{/extends}}