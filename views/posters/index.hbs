{{#extends "base"}}
{{#block "content"}}

<form method="GET">
    {{{form}}}
    <input type="hidden" name="_csrf" value="{{csrfToken}}" />
    <input type="submit" class="m-3 btn btn-primary" value="Search" />
</form>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Cost</th>
            <th>Stock</th>
            <th>Description</th>
            <th>Height(cm)</th>
            <th>Width(cm)</th>
            <th>Category</th>
            <th></th>
        </tr>

    </thead>
    <tbody>
        {{#each posters}}
        <tr>
            <td>
                {{this.id}}
            </td>
            <td>
                {{this.title}}
            </td>
            <td>
                {{this.cost}}
            </td>
            <td>
                {{this.stock}}
            </td>
            <td>
                {{this.description}}
            </td>
            <td>{{this.height}}</td>
            <td>{{this.width}}</td>
            <td>{{this.category}}</td>
            <td>
                <a href="/posters/{{this.id}}/update" class="btn btn-primary btn-sm mb-1">Update</a>
                <a href="/posters/{{this.id}}/delete" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{/block}}
{{/extends}}